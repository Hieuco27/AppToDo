<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="tvsub">
        <item name="android:textColor">#70FFFFFF</item>
        <item name="android:fontFamily">@font/latoregular</item>
        <item name="android:textSize">25sp</item>


    </style>
    <style name="tvmain">
        <item name="android:textColor">#DEFFFFFF</item>
        <item name="android:fontFamily">@font/latobold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="tvsub2">
        <item name="android:textColor">#DEFFFFFF</item>
        <item name="android:fontFamily">@font/latoregular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="btnmain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/btnmain</item>

        <item name="android:padding">12sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TransparentButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btnsub</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="btnlog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#979797</item>
        <item name="android:background">@drawable/btnlog</item>
    </style>
    <style name="edt" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:background">@drawable/btnsub2</item>
        <item name="android:fontFamily">@font/latoregular</item>
        <item name="android:padding">8sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/xam2</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="logwgg" parent="Widget.MaterialComponents.Button">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">50sp</item>
            <item name="android:background">@drawable/btnsub</item>
            <item name="android:fontFamily">@font/latoregular</item>
            <item name="android:padding">8sp</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:textColorHint">@color/xam2</item>
            <item name="android:textSize">16sp</item>
            <item name="android:textAllCaps">false</item>
    </style>


</resources>